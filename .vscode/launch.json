{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"skipFiles": [
				"<node_internals>/**"
			],
			"preLaunchTask": "npm: build",
			"postDebugTask": "npm: build",
		},
	]
}
